<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Estilo para la Tarjeta contenedora -->
    <style name="TarjetaPelicula">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginHorizontal">4dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:padding">12dp</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="android:layout_margin">8dp</item>"
    </style>

    <!-- Estilo para el tÃ­tulo -->
    <style name="TextoTituloPelicula">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <!-- Estilo para la fecha -->
    <style name="TextoFecha">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <!-- Estilo para el click de los MaterialButtonToggleGroup -->
    <style name="CustomToggleButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/toggle_button_text</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@android:color/darker_gray</item>
        <item name="cornerRadius">8dp</item>
    </style>
</resources>